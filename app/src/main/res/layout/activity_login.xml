<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.njupt.a01sr.welcomerobot.LoginActivity">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_marginTop="48dp"
        android:layout_width="@dimen/login_width"
        android:layout_height="@dimen/login_height"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/login_icon_size"
            android:layout_height="@dimen/login_icon_size"
            android:src="@mipmap/account_icon"/>

        <EditText
            android:id="@+id/et_account"
            android:layout_width="@dimen/text_width"
            android:layout_height="@dimen/text_height"
            android:hint="账户"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/login_width"
        android:layout_height="@dimen/login_height"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/login_icon_size"
            android:layout_height="@dimen/login_icon_size"
            android:src="@mipmap/passwd_icon"/>

        <EditText
            android:id="@+id/et_passwd"
            android:layout_width="@dimen/text_width"
            android:layout_height="@dimen/text_height"
            android:hint="密码"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/login_width"
        android:layout_height="@dimen/login_height"
        android:orientation="horizontal"
        android:gravity="right">
        <CheckBox
            android:id="@+id/cb_remeber_passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remeber_passwd"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/btn_margin_top"
        android:layout_width="@dimen/login_width"
        android:layout_height="@dimen/login_height"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:background="@drawable/cancel"/>
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="@dimen/btn_width"
            android:layout_height="@dimen/btn_height"
            android:background="@drawable/ok"/>
    </LinearLayout>

</LinearLayout>
