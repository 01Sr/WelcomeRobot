<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.njupt.a01sr.welcomerobot.MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/big_block_width"
        android:layout_height="@dimen/block_size">

        <Button
            android:layout_width="@dimen/block_size"
            android:layout_height="@dimen/block_size"
            android:background="@drawable/info"/>

        <Button
            android:layout_width="@dimen/block_size"
            android:layout_height="@dimen/block_size"
            android:background="@drawable/cruise"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/big_block_width"
        android:layout_height="@dimen/block_size">

        <Button
            android:layout_width="@dimen/block_size"
            android:layout_height="@dimen/block_size"
            android:background="@drawable/navigation" />

        <Button
            android:layout_width="@dimen/block_size"
            android:layout_height="@dimen/block_size"
            android:background="@drawable/welcome"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/big_block_width"
        android:layout_height="@dimen/block_size">

        <Button
            android:text="设备控制"
            android:textColor="#fff"
            android:textSize="26sp"
            android:layout_width="@dimen/block_size"
            android:layout_height="@dimen/block_size"
            android:background="@color/colorPrimary"/>

        <Button
            android:text="人机聊天"
            android:textColor="#fff"
            android:textSize="26sp"
            android:layout_width="@dimen/block_size"
            android:layout_height="@dimen/block_size"
            android:background="@color/colorPrimary"/>
    </LinearLayout>

</LinearLayout>
